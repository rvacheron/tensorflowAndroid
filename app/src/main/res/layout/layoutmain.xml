<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
			  android:orientation="vertical"
	android:id="@+id/mainLayout"
	>

	<GridLayout
		android:id="@+id/gridDrawing"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:background="@drawable/scratch_pad_border"
		android:padding="5dp">

		<com.example.etudiant.interfacesaisie.DrawingView
			android:id="@+id/scratch_pad"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:clickable="false" />
	</GridLayout>

	<LinearLayout
		android:id="@+id/choice_bar"
		style="@style/Widget.AppCompat.Button.Borderless"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:animateLayoutChanges="true"
		android:background="@drawable/button_border_blue"
		android:orientation="horizontal"
		android:textAlignment="center">


		<ToggleButton
			android:id="@+id/toggleButton"
			style="@style/Widget.AppCompat.Button.Borderless"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="0.2"
			android:text="Demonstration"
			android:textOff="@string/textOff"
			android:textOn="@string/textOn" />

		<TextView
			android:id="@+id/texteDescription"
			style="@style/Widget.AppCompat.Button.Borderless"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/texteDesciption" />

		<Button
			android:id="@+id/choice_1"
			style="@style/Widget.AppCompat.Button.Borderless"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="1dp"
			android:layout_weight="1"
			android:background="@drawable/button_choice"
			android:text="@string/choice_1"
			android:textAlignment="center"
			android:textStyle="bold" />

		<Button
			android:id="@+id/choice_2"
			style="@style/Widget.AppCompat.Button.Borderless"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="1dp"
			android:layout_marginRight="1dp"
			android:layout_weight="1"
			android:background="@drawable/button_choice"
			android:text="@string/choice_2"
			android:textStyle="bold" />

		<Button
			android:id="@+id/choice_3"
			style="@style/Widget.AppCompat.Button.Borderless"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="1dp"
			android:layout_marginRight="2dp"
			android:layout_weight="1"
			android:background="@drawable/button_choice"
			android:text="@string/choice_3"
			android:textAlignment="center"
			android:textStyle="bold" />
	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<Button
				android:id="@+id/reset_button"
				style="@style/Widget.AppCompat.Button"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@drawable/button_main"
				android:text="@string/reset_button" />

			<Button
				android:id="@+id/save_button"
				style="@style/Widget.AppCompat.Button"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/button_main"
				android:text="@string/save_button" />

			<Button
				android:id="@+id/annulerChoix"
				style="@style/Widget.AppCompat.Button"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/button_main"
				android:text="@string/cancel_button" />
		</LinearLayout>



	</LinearLayout>
